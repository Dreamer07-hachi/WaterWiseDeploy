/* Tablet and below (768px and down) */
@media (max-width: 768px) {
    /* Main content padding adjustment */
    main {
        padding: 0 1.5rem;
    }

    /* Hero section spacing */
    .hero-section {
        padding: 3rem 0;
    }

    .hero-section h1 {
        font-size: clamp(2rem, 8vw, 2.5rem);
        margin-bottom: 1rem;
    }

    .hero-section p {
        font-size: 1.1rem;
        margin-bottom: 2rem;
    }

    .hero-badge {
        padding: 0.6rem 1.25rem;
        font-size: 0.85rem;
        gap: 0.5rem;
    }

    /* CTA button adjustment */
    .cta-button {
        padding: 0.875rem 1.75rem;
        font-size: 1rem;
        width: 100%;
        max-width: 300px;
        justify-content: center;
    }

    /* Stats section */
    .stats-section {
        grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
        gap: 1.5rem;
        margin: 2rem 0;
        padding: 1.5rem 0;
    }

    .stat-card {
        padding: 1.5rem;
    }

    .stat-number {
        font-size: 2rem;
    }

    .stat-label {
        font-size: 0.9rem;
    }

    /* Section titles */
    .section-title {
        font-size: 2rem;
        margin: 3rem 0 2rem;
    }

    /* Dashboard container */
    .dashboard-container {
        grid-template-columns: 1fr;
        gap: 1.5rem;
        margin: 2rem 0;
    }

    .dashboard {
        padding: 2rem 1.5rem;
    }

    .dashboard .icon {
        font-size: 2.5rem;
        margin-bottom: 1rem;
    }

    .dashboard h3 {
        font-size: 1.25rem;
    }

    .dashboard p {
        font-size: 0.95rem;
    }

    /* Content container */
    .content-container {
        padding: 2rem 1.5rem;
        margin: 2rem 0;
    }

    .content-container h2 {
        font-size: 1.75rem;
        margin-bottom: 2rem;
    }

    .feature-item {
        flex-direction: column;
        gap: 1rem;
        padding: 1.25rem;
    }

    .feature-icon {
        font-size: 1.1rem;
        padding: 0.875rem;
        min-width: 2.75rem;
        height: 2.75rem;
    }

    .feature-content h4 {
        font-size: 1.05rem;
    }

    .feature-content p {
        font-size: 0.95rem;
    }

    /* CTA section */
    .cta-section {
        padding: 3rem 1.5rem;
        margin: 3rem -1.5rem 0 -1.5rem;
    }

    .cta-section h3 {
        font-size: 1.75rem;
    }

    .cta-section p {
        font-size: 1rem;
    }

    .cta-buttons {
        flex-direction: column;
        align-items: center;
    }

    .cta-secondary {
        width: 100%;
        max-width: 300px;
        justify-content: center;
        padding: 0.875rem 1.75rem;
    }
}

/* Mobile devices (480px and down) */
@media (max-width: 480px) {
    /* Main content */
    main {
        padding: 0 1rem;
    }

    /* Hero section */
    .hero-section {
        padding: 2.5rem 0;
    }

    .hero-section h1 {
        font-size: clamp(1.75rem, 10vw, 2rem);
        margin-bottom: 0.875rem;
    }

    .hero-section p {
        font-size: 1rem;
        margin-bottom: 1.75rem;
    }

    .hero-badge {
        padding: 0.5rem 1rem;
        font-size: 0.8rem;
        margin-bottom: 1.5rem;
    }

    /* CTA button */
    .cta-button {
        padding: 0.75rem 1.5rem;
        font-size: 0.95rem;
        width: 100%;
        max-width: 100%;
    }

    /* Stats section */
    .stats-section {
        grid-template-columns: 1fr;
        gap: 1rem;
        margin: 1.5rem 0;
        padding: 1rem 0;
    }

    .stat-card {
        padding: 1.25rem;
    }

    .stat-number {
        font-size: 1.75rem;
    }

    .stat-label {
        font-size: 0.85rem;
    }

    /* Section titles */
    .section-title {
        font-size: 1.75rem;
        margin: 2.5rem 0 1.5rem;
    }

    /* Dashboard container */
    .dashboard-container {
        gap: 1.25rem;
        margin: 1.5rem 0;
    }

    .dashboard {
        padding: 1.75rem 1.25rem;
        border-radius: 16px;
    }

    .dashboard .icon {
        font-size: 2.25rem;
        margin-bottom: 0.875rem;
    }

    .dashboard h3 {
        font-size: 1.15rem;
        margin-bottom: 0.75rem;
    }

    .dashboard p {
        font-size: 0.9rem;
    }

    /* Content container */
    .content-container {
        padding: 1.75rem 1.25rem;
        margin: 1.5rem 0;
        border-radius: 16px;
    }

    .content-container h2 {
        font-size: 1.5rem;
        margin-bottom: 1.5rem;
    }

    .feature-item {
        gap: 0.875rem;
        padding: 1rem;
        margin-bottom: 1.25rem;
    }

    .feature-icon {
        font-size: 1rem;
        padding: 0.75rem;
        min-width: 2.5rem;
        height: 2.5rem;
    }

    .feature-content h4 {
        font-size: 1rem;
        margin-bottom: 0.375rem;
    }

    .feature-content p {
        font-size: 0.9rem;
    }

    /* CTA section */
    .cta-section {
        padding: 2.5rem 1rem;
        margin: 2.5rem -1rem 0 -1rem;
    }

    .cta-section h3 {
        font-size: 1.5rem;
        margin-bottom: 0.75rem;
    }

    .cta-section p {
        font-size: 0.95rem;
        margin-bottom: 1.5rem;
    }

    .cta-secondary {
        padding: 0.75rem 1.5rem;
        font-size: 0.95rem;
    }
}

/* Large tablets and small desktops (769px to 1024px) */
@media (min-width: 769px) and (max-width: 1024px) {
    main {
        padding: 0 2rem;
    }

    .dashboard-container {
        grid-template-columns: repeat(2, 1fr);
    }

    .stats-section {
        grid-template-columns: repeat(2, 1fr);
    }
}

/* Extra small devices (320px and down) */
@media (max-width: 320px) {
    .hero-section h1 {
        font-size: 1.5rem;
    }

    .hero-section p {
        font-size: 0.9rem;
    }

    .stat-number {
        font-size: 1.5rem;
    }

    .section-title {
        font-size: 1.5rem;
    }

    .dashboard h3 {
        font-size: 1.05rem;
    }

    .content-container h2 {
        font-size: 1.35rem;
    }
}

/* Landscape orientation adjustments for mobile */
@media (max-height: 600px) and (orientation: landscape) {
    .hero-section {
        padding: 2rem 0;
    }

    .stats-section {
        margin: 1.5rem 0;
    }

    .section-title {
        margin: 2rem 0 1.5rem;
    }
}

/* Touch device optimizations */
@media (hover: none) and (pointer: coarse) {
    .dashboard:hover {
        transform: none;
    }

    .dashboard:active {
        transform: translateY(-8px);
    }

    .cta-button:hover {
        transform: none;
    }

    .cta-button:active {
        transform: translateY(-2px);
    }

    .stat-card:hover {
        transform: none;
    }

    .feature-item:hover {
        transform: none;
    }
}

/* Ensure images and iframes are responsive */
img, iframe, video {
    max-width: 100%;
    height: auto;
}

/* Prevent horizontal scroll */
html {
    overflow-x: hidden;
}

body {
    overflow-x: hidden;
    width: 100%;
}
    </style>

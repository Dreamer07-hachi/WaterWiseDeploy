                </div>
                <div class="dropdown-menu">
                    <a href="/login"><i class="fas fa-user"></i> Customer</a>
                    <a href="/login-supplier"><i class="fas fa-truck"></i> Tankers</a>
                    <a href="/society/login"><i class="fas fa-building"></i> Society</a>
                </div>
            </div>

            <div class="dropdown signup-dropdown">
                <div class="dropdown-btn signup-btn">
                    <i class="fas fa-rocket"></i>
                    Get Started
                </div>
                <div class="dropdown-menu">
                    <a href="/register"><i class="fas fa-user-plus"></i> Customers</a>
                    <a href="/register-supplier"><i class="fas fa-truck"></i> Tankers</a>
                    <a href="/society/register"><i class="fas fa-city"></i> Societies</a>
                </div>
            </div>
        </div>
    </div>
</header>


<script>
    // We wrap our code in a check to make sure it doesn't run
    // multiple times if this header is loaded weirdly.
    if (typeof headerScriptLoaded === 'undefined') {
        const headerScriptLoaded = true;

        document.addEventListener("DOMContentLoaded", function () {
            
            // We select the dropdowns *inside* this specific header
            // This is safer in case you have other dropdowns
            const headerElement = document.querySelector("header");
            if (!headerElement) return; // Exit if header not found
            
            const dropdowns = headerElement.querySelectorAll(".dropdown");

            dropdowns.forEach(dropdown => {
                const btn = dropdown.querySelector(".dropdown-btn");
                const menu = dropdown.querySelector(".dropdown-menu");

                if (!btn || !menu) return; // Skip if button or menu missing

                btn.addEventListener("click", function (event) {
                    event.stopPropagation();
                    
                    // Close all *other* dropdowns
                    closeAllDropdowns(menu);

                    // Toggle (open/close) this menu
                    menu.classList.toggle("show");
                });
            });
            
            function closeAllDropdowns(exceptThisMenu = null) {
                headerElement.querySelectorAll(".dropdown-menu.show").forEach(openMenu => {
                    if (openMenu !== exceptThisMenu) {
                        openMenu.classList.remove("show");
                    }
                });
            }

            // Clicking anywhere else on the window closes the menus
            window.addEventListener("click", function () {
                closeAllDropdowns();
            });
        });
    }
</script>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Rate Your Order - SmartWater</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <style>
        body { font-family: 'Inter', sans-serif; background-color: #f8f9fa; }
        .rating-card { background-color: #fff; padding: 2.5rem; border-radius: 15px; box-shadow: 0 8px 25px rgba(0,0,0,0.1); }
        .star-rating .fa-star { font-size: 2.5rem; color: #e4e5e9; cursor: pointer; transition: color 0.2s; }
        .star-rating .fa-star:hover,
        .star-rating .fa-star.selected { color: #ffc107; }

        /* Responsive styles */
.rating-card {
    padding: clamp(1.5rem, 4vw, 2.5rem);
    border-radius: clamp(12px, 2vw, 15px);
    margin: clamp(1rem, 3vw, 2rem);
}

.rating-card h2 {
    font-size: clamp(1.5rem, 4vw, 2rem);
}

.rating-card p {
    font-size: clamp(0.9rem, 2vw, 1rem);
}

.star-rating .fa-star {
    font-size: clamp(2rem, 5vw, 2.5rem);
    margin: clamp(0.25rem, 1vw, 0.5rem);
}

textarea.form-control {
    font-size: clamp(0.9rem, 2vw, 1rem);
    padding: clamp(0.65rem, 2vw, 0.75rem);
}

.btn {
    padding: clamp(0.65rem, 2vw, 0.75rem) clamp(1rem, 3vw, 1.5rem);
    font-size: clamp(0.9rem, 2vw, 1rem);
}

/* Tablet breakpoint */
@media (max-width: 768px) {
    .rating-card {
        padding: 2rem 1.5rem;
    }
    
    .star-rating .fa-star {
        font-size: 2.25rem;
        margin: 0.35rem;
    }
}

/* Mobile breakpoint */
@media (max-width: 480px) {
    .rating-card {
        padding: 1.5rem 1rem;
        border-radius: 12px;
        margin: 1rem 0.5rem;
    }
    
    .star-rating {
        display: flex;
        justify-content: center;
        flex-wrap: wrap;
        gap: 0.25rem;
    }
    
    .star-rating .fa-star {
        font-size: 2rem;
        margin: 0.25rem;
    }
    
    textarea.form-control {
        min-height: 100px;
    }
    
    .btn {
        width: 100%;
        margin-bottom: 0.5rem;
    }
}

/* Extra small devices */
@media (max-width: 360px) {
    .rating-card {
        padding: 1.25rem 0.75rem;
    }
    
    .star-rating .fa-star {
        font-size: 1.75rem;
        margin: 0.2rem;
    }
}
    </style>
</head>
<body>
    <%- include ('partials/header') %>
    <main class="container d-flex align-items-center justify-content-center" style="min-height: 100vh;">
        <div class="rating-card col-md-6 col-lg-5">
            <div class="text-center">
                <h1 class="fw-bold">Rate Your Delivery</h1>
                <p class="text-muted">How was your experience with <strong><%= order.business_name %></strong> for Order #<%= order.id %>?</p>
            </div>

            <form action="/submit-rating" method="POST">
                <input type="hidden" name="orderId" value="<%= order.id %>">
                <input type="hidden" name="supplierId" value="<%= order.supplier_id %>">
                <input type="hidden" id="ratingValue" name="ratingValue" value="0">

                <div class="star-rating d-flex justify-content-center my-4" id="star-container">
                    <i class="fa-solid fa-star" data-value="1"></i>
                    <i class="fa-solid fa-star" data-value="2"></i>
                    <i class="fa-solid fa-star" data-value="3"></i>
                    <i class="fa-solid fa-star" data-value="4"></i>
                    <i class="fa-solid fa-star" data-value="5"></i>
                </div>
                
                <div class="mb-3">
                    <textarea class="form-control" name="reviewText" rows="3" placeholder="Leave a review (optional)"></textarea>
                </div>

                <button type="submit" class="btn btn-primary w-100 fw-bold mt-3">Submit Review</button>
            </form>
        </div>
    </main>

    <script>
        const stars = document.querySelectorAll('.star-rating .fa-star');
        const ratingInput = document.getElementById('ratingValue');

        stars.forEach(star => {
            star.addEventListener('click', () => {
                const value = parseInt(star.dataset.value);
                ratingInput.value = value;
                stars.forEach(s => {
                    s.classList.toggle('selected', parseInt(s.dataset.value) <= value);
                });
            });
        });
    </script>
</body>
</html>
